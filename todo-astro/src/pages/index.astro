---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo App</title>
  </head>

  <body
    class="bg-gradient-to-r from-blue-500 to-purple-600 min-h-screen flex items-center justify-center"
  >
    <div x-data="taskManager()" x-init="init()" class="w-full max-w-4xl px-4">
      <h1 class="text-4xl font-bold text-white text-center mb-8">Todo App</h1>

      <!-- Task Cards -->
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3">
        <button
          @click="showCreateModal()"
          class="transition ease-in-out delay-150 bg-white hover:-translate-y-1 hover:scale-110
                     hover:bg-indigo-500 duration-300 flex justify-center items-center rounded-lg
                       hover:cursor-pointer text-white p-4"
        >
          <img src="/icons/plus.svg" alt="" />
        </button>
        <!-- Iterar sobre las tareas -->
        <template x-for="task in tasks" :key="task.id">
          <div class="p-4 bg-white rounded-lg shadow border border-gray-200">
            <div class="px-4">
              <div class="flex justify-between">
                <span
                  class="text-xs px-2 py-1 rounded-full"
                  :class="task.completed ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'"
                >
                  <span x-text="task.completed ? 'Completed' : 'Pending'"
                  ></span>
                </span>
                <span class="flex justify-end space-x-2">
                  <!-- Botón de editar -->
                  <button @click="showEditModal(task)">
                    <img class="h-6" src="/icons/edit.svg" alt="Edit" />
                  </button>
                  <!-- Botón de eliminar -->
                  <button @click="showDeleteModal(task)">
                    <img class="h-6" src="/icons/trash-can.svg" alt="Delete" />
                  </button>
                </span>
              </div>
              <div class="text-center pt-3">
                <h1
                  class="text-lg font-semibold text-gray-900"
                  x-text="task.title"
                >
                </h1>
                <p class="text-sm text-gray-500" x-text="task.description"></p>
              </div>
            </div>
          </div>
        </template>
      </div>

      <!-- Modal para eliminar tarea -->
      <div
        x-cloak
        x-show="deleteModalIsOpen"
        x-transition.opacity.duration.200ms
        x-trap.inert.noscroll="deleteModalIsOpen"
        @keydown.esc.window="deleteModalIsOpen = false"
        @click.self="deleteModalIsOpen = false"
        class="fixed inset-0 z-30 flex items-end justify-center bg-black/20 p-4 pb-8 backdrop-blur-md sm:items-center lg:p-8"
        role="dialog"
        aria-modal="true"
        aria-labelledby="deleteModalTitle"
      >
        <!-- Modal Dialog -->
        <div
          x-show="deleteModalIsOpen"
          x-transition:enter="transition ease-out duration-200 delay-100 motion-reduce:transition-opacity"
          x-transition:enter-start="opacity-0 scale-50"
          x-transition:enter-end="opacity-100 scale-100"
          class="flex max-w-lg flex-col gap-4 overflow-hidden rounded-md border border-neutral-300 bg-white text-neutral-600
                        dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-300"
        >
          <!-- Dialog Header -->
          <div
            class="flex items-center justify-between border-b border-neutral-300 bg-neutral-50/60 p-4
                            dark:border-neutral-700 dark:bg-neutral-950/20"
          >
            <h3
              id="deleteModalTitle"
              class="font-semibold tracking-wide text-neutral-900 dark:text-white"
            >
              Eliminar Tarea
            </h3>
            <button @click="deleteModalIsOpen = false" aria-label="close modal">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                aria-hidden="true"
                stroke="currentColor"
                fill="none"
                stroke-width="1.4"
                class="w-5 h-5"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          <!-- Dialog Body -->
          <div class="px-4 py-8">
            <p>
              ¿Estás seguro de que deseas eliminar la tarea <strong
                x-text="selectedTaskTitle"></strong>?
            </p>
          </div>
          <!-- Dialog Footer -->
          <div
            class="flex flex-col-reverse justify-between gap-2 border-t border-neutral-300 bg-neutral-50/60 p-4
                            dark:border-neutral-700 dark:bg-neutral-950/20 sm:flex-row sm:items-center md:justify-end"
          >
            <button
              @click="deleteModalIsOpen = false"
              type="button"
              class="cursor-pointer whitespace-nowrap rounded-md px-4 py-2 text-center text-sm font-medium
                            tracking-wide text-neutral-600 transition hover:opacity-75 focus-visible:outline
                            focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100
                            active:outline-offset-0 dark:text-neutral-300 dark:focus-visible:outline-white"
              >Cancelar</button
            >
            <button
              @click="confirmDelete()"
              type="button"
              class="cursor-pointer whitespace-nowrap rounded-md bg-red-700 px-4 py-2 text-center text-sm font-medium
                            tracking-wide text-neutral-100 transition hover:opacity-75 focus-visible:outline
                            focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100
                            active:outline-offset-0"
              >Eliminar</button
            >
          </div>
        </div>
      </div>

      <!-- Modal para editar tarea -->
      <div
        x-cloak
        x-show="editModalIsOpen"
        x-transition.opacity.duration.200ms
        x-trap.inert.noscroll="editModalIsOpen"
        @keydown.esc.window="editModalIsOpen = false"
        @click.self="editModalIsOpen = false"
        class="fixed inset-0 z-30 flex items-end justify-center bg-black/20 p-4 pb-8 backdrop-blur-md sm:items-center lg:p-8"
        role="dialog"
        aria-modal="true"
        aria-labelledby="editModalTitle"
      >
        <!-- Modal Dialog -->
        <div
          x-show="editModalIsOpen"
          x-transition:enter="transition ease-out duration-200 delay-100 motion-reduce:transition-opacity"
          x-transition:enter-start="opacity-0 scale-50"
          x-transition:enter-end="opacity-100 scale-100"
          class="flex w-[32rem] max-w-lg flex-col gap-4 overflow-hidden rounded-md border border-neutral-300 bg-white text-neutral-600
                        dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-300"
        >
          <!-- Dialog Header -->
          <div
            class="flex items-center justify-between border-b border-neutral-300 bg-neutral-50/60 p-4
                            dark:border-neutral-700 dark:bg-neutral-950/20"
          >
            <h3
              id="editModalTitle"
              class="font-semibold tracking-wide text-neutral-900 dark:text-white"
            >
              Editar Tarea
            </h3>
            <button @click="editModalIsOpen = false" aria-label="close modal">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                aria-hidden="true"
                stroke="currentColor"
                fill="none"
                stroke-width="1.4"
                class="w-5 h-5"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          <!-- Dialog Body -->
          <div class="px-4 py-8">
            <!-- Formulario de edición -->
            <form @submit.prevent="confirmEditTask(selectedTask.id)">
              <div class="mb-4">
                <label
                  for="title"
                  class="block text-sm font-medium text-neutral-700 dark:text-neutral-300"
                  >Título</label
                >
                <input
                  type="text"
                  id="title"
                  x-model="selectedTask.title"
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-neutral-700 dark:bg-neutral-800 dark:text-neutral-300"
                />
              </div>
              <div class="mb-4">
                <label
                  for="description"
                  class="block text-sm font-medium text-neutral-700 dark:text-neutral-300"
                  >Descripción</label
                >
                <textarea
                  id="description"
                  x-model="selectedTask.description"
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-neutral-700 dark:bg-neutral-800 dark:text-neutral-300"
                ></textarea>
              </div>
              <div class="mb-4">
                <label
                  for="completed"
                  class="block text-sm font-medium text-neutral-700 dark:text-neutral-300"
                  >Estado</label
                >
                <select
                  id="completed"
                  x-model="selectedTask.completed"
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-neutral-700 dark:bg-neutral-800 dark:text-neutral-300"
                >
                  <option :value="true">Completado</option>
                  <option :value="false">Pendiente</option>
                </select>
              </div>
              <!-- Botones de acción -->
              <div class="flex justify-end space-x-2">
                <button
                  @click="editModalIsOpen = false"
                  type="button"
                  class="cursor-pointer whitespace-nowrap rounded-md px-4 py-2 text-center text-sm font-medium
                                    tracking-wide text-neutral-600 transition hover:opacity-75 focus-visible:outline
                                    focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100
                                    active:outline-offset-0 dark:text-neutral-300 dark:focus-visible:outline-white"
                  >Cancelar</button
                >
                <button
                  type="submit"
                  class="cursor-pointer whitespace-nowrap rounded-md bg-black px-4 py-2 text-center text-sm font-medium
                                    tracking-wide text-neutral-100 transition hover:opacity-75 focus-visible:outline
                                    focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100
                                    active:outline-offset-0 dark:bg-white dark:text-black dark:focus-visible:outline-white"
                  >Guardar</button
                >
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Modal para crear tareas -->
      <div
        x-cloak
        x-show="createModalIsOpen"
        x-transition.opacity.duration.200ms
        x-trap.inert.noscroll="createModalIsOpen"
        @keydown.esc.window="createModalIsOpen = false"
        @click.self="createModalIsOpen = false"
        class="fixed inset-0 z-30 flex items-end justify-center bg-black/20 p-4 pb-8 backdrop-blur-md sm:items-center lg:p-8"
        role="dialog"
        aria-modal="true"
        aria-labelledby="createModalTitle"
      >
        <!-- Modal Dialog -->
        <div
          x-show="createModalIsOpen"
          x-transition:enter="transition ease-out duration-200 delay-100 motion-reduce:transition-opacity"
          x-transition:enter-start="opacity-0 scale-50"
          x-transition:enter-end="opacity-100 scale-100"
          class="flex w-[32rem] max-w-lg flex-col gap-4 overflow-hidden rounded-md border border-neutral-300 bg-white text-neutral-600
                    dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-300"
        >
          <!-- Dialog Header -->
          <div
            class="flex items-center justify-between border-b border-neutral-300 bg-neutral-50/60 p-4
                        dark:border-neutral-700 dark:bg-neutral-950/20"
          >
            <h3
              id="createModalTitle"
              class="font-semibold tracking-wide text-neutral-900 dark:text-white"
            >
              Crear Tarea
            </h3>
            <button @click="createModalIsOpen = false" aria-label="close modal">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                aria-hidden="true"
                stroke="currentColor"
                fill="none"
                stroke-width="1.4"
                class="w-5 h-5"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          <!-- Dialog Body -->
          <div class="px-4 py-8">
            <!-- Formulario de creacion -->
            <form @submit.prevent="confirmCreateTask()">
              <div class="mb-4">
                <label
                  for="title"
                  class="block text-sm font-medium text-neutral-700 dark:text-neutral-300"
                  >Título</label
                >
                <input
                  type="text"
                  id="title"
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-neutral-700 dark:bg-neutral-800 dark:text-neutral-300"
                />
              </div>
              <div class="mb-4">
                <label
                  for="description"
                  class="block text-sm font-medium text-neutral-700 dark:text-neutral-300"
                  >Descripción</label
                >
                <textarea
                  id="description"
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-neutral-700 dark:bg-neutral-800 dark:text-neutral-300"
                ></textarea>
              </div>
              <div class="mb-4">
                <label
                  for="completed"
                  class="block text-sm font-medium text-neutral-700 dark:text-neutral-300"
                  >Estado</label
                >
                <select
                  id="completed"
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-neutral-700 dark:bg-neutral-800 dark:text-neutral-300"
                >
                  <option :value="false">Pendiente</option>
                  <option :value="true">Completado</option>
                </select>
              </div>
              <!-- Botones de acción -->
              <div class="flex justify-end space-x-2">
                <button
                  @click="createModalIsOpen = false"
                  type="button"
                  class="cursor-pointer whitespace-nowrap rounded-md px-4 py-2 text-center text-sm font-medium
                                tracking-wide text-neutral-600 transition hover:opacity-75 focus-visible:outline
                                focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100
                                active:outline-offset-0 dark:text-neutral-300 dark:focus-visible:outline-white"
                  >Cancelar</button
                >
                <button
                  type="submit"
                  class="cursor-pointer whitespace-nowrap rounded-md bg-black px-4 py-2 text-center text-sm font-medium
                                tracking-wide text-neutral-100 transition hover:opacity-75 focus-visible:outline
                                focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100
                                active:outline-offset-0 dark:bg-white dark:text-black dark:focus-visible:outline-white"
                  >Guardar</button
                >
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Funciones  -->
    <script is:inline>
      async function getTasks() {
        let response = await fetch("http://localhost:3000/api/v1/tasks/");
        return await response.json();
      }

      function taskManager() {
        return {
          tasks: [],
          selectedTaskTitle: "",
          selectedTask: {},
          deleteModalIsOpen: false,
          editModalIsOpen: false,
          createModalIsOpen: false,
          async init() {
            this.tasks = await getTasks();
          },
          showDeleteModal(task) {
            this.selectedTaskTitle = task.title;
            this.deleteModalIsOpen = true;
          },
          showEditModal(task) {
            this.selectedTask = { ...task };
            this.editModalIsOpen = true;
          },
          showCreateModal() {
            this.createModalIsOpen = true;
          },
          confirmDelete() {
            console.log(`Deleting task: ${this.selectedTaskTitle}`);
            this.deleteModalIsOpen = false;
          },
          confirmEditTask(id) {
            console.log(`Edit task with id: ${id}`);
            this.editModalIsOpen = false;
          },
          confirmCreateTask (){
            console.log("creating task")
            this.createModalIsOpen = false;
          }
        };
      }
    </script>
  </body>
</html>
